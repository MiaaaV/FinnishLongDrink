<Defs>
  <ThingDef ParentName="TreeBase">
    <defName>GrapefruitTree</defName>
    <label>grapefruit tree</label>
    <description>A fresh fruit specifically meant for Finnish Long Drinks, but also tasty on its own.</description>

    <graphicData>
      <texPath>Things/Plant/GrapefruitTree</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
          <volume>(0.15, 0.3, 0.15)</volume>
          <offset>(0,0,-0.38)</offset>
      </shadowData>
    </graphicData>

    <selectable>true</selectable>

    <statBases>
      <Beauty>20</Beauty>
      <Nutrition>1.10</Nutrition>
    </statBases>

    <ingestible/>

    <plant>
      <visualSizeRange>
        <min>0.4</min>
        <max>2.0</max>
      </visualSizeRange>

      <dieIfLeafless>true</dieIfLeafless>
      <growDays>13</growDays>

      <sowMinSkill>5</sowMinSkill>
      <sowTags>
        <li>Ground</li>
      </sowTags>

      <sowResearchPrerequisites>
        <li>GrapefruitTree</li>
      </sowResearchPrerequisites>

      <topWindExposure>0.15</topWindExposure>
      <mustBeWildToSow>false</mustBeWildToSow>
      <immatureGraphicPath>Things/Plant/ImmatureGrapefruit</immatureGraphicPath>
      <harvestWork>400</harvestWork>
			<harvestTag>Standard</harvestTag>
      <harvestYield>40</harvestYield>
      <harvestedThingDef>Grapefruit</harvestedThingDef>
      <harvestFailable>true</harvestFailable>
    </plant>
</ThingDef>
</Defs>